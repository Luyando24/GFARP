# Example environment variables file
# Copy this file to .env and fill in your actual values
# DO NOT commit the actual .env file to version control

# Builder.io API Key
# https://www.builder.io/c/docs/using-your-api-key
VITE_PUBLIC_BUILDER_KEY=your_builder_public_key_here
PING_MESSAGE=your_ping_message_here

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/database_name
DB_HOST=localhost
DB_PORT=5432
DB_NAME=database_name
DB_USER=user
DB_PASSWORD=password

# NRC Hashing Salt (for student privacy)
NRC_SALT=your_secure_salt_here

# Supabase Configuration (for Storage and Real-time features)
# Get these from your Supabase project dashboard
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Alternative Vite environment variables (if using Vite)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Email Service Configuration (for notifications)
# SMTP settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Client URL for email links
CLIENT_URL=http://localhost:8080

# Stripe Configuration
# Get these from your Stripe dashboard
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Vite environment variables for Stripe (client-side)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here